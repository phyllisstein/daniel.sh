{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": true,
    "isolatedModules": false,
    "jsx": "preserve",
    "lib": [
      "es5",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noResolve": true,
    "paths": {
      "*": [
        "*",
        "src/*",
        "vendor/*"
      ]
    },
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": false,
    "suppressImplicitAnyIndexErrors": true,
    "target": "esnext"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./content/**/*.mdx",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./vendor/**/*.ts"
  ],
  "typeRoots": [
    "./node_modules/@types",
    "./vendor/types"
  ]
}
